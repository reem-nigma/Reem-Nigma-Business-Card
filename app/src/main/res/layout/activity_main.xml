<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reem_nigma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:text="Reem Nigma"
                    android:textColor="#A37F2C"
                    android:textSize="60sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/programming_developer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Programming Developer"
                    android:textColor="#A37F2C"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/reem_nigma_wight"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/reem_nigma_wight" />

                <TextView
                    android:id="@+id/discreptain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:text="مصممة تطبيقات اندرويد"
                    android:textColor="#A37F2C"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/adresse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:text="القاهرة"
                    android:textColor="#A37F2C"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:text="24 ساعة"
                    android:textColor="#A37F2C"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/phone_icon"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/phone_icon" />

                    <TextView
                        android:id="@+id/no.tele"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="4"
                        android:text="01064422023"
                        android:textColor="#A37F2C"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/telegram"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/telegram" />

                    <TextView
                        android:id="@+id/no.gram"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="4"
                        android:text="01064422023"
                        android:textColor="#A37F2C"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/whatsapp"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/whatsapp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/no.whats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="01064422023"
                        android:textColor="#A37F2C"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_weight="4"/>

                    <ImageView
                        android:id="@+id/facebook"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/facebook"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/name.face"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Reem Hany Nigma"
                        android:textColor="#A37F2C"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_weight="4"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/instagram"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/instagram" />

                    <TextView
                        android:id="@+id/name.insta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="4"
                        android:text="reemnigma"
                        android:textColor="#A37F2C"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/linkedin"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/linkedin" />

                    <TextView
                        android:id="@+id/name.in"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_toRightOf="@+id/linkedin"
                        android:layout_weight="4"
                        android:text="reem nigma"
                        android:textColor="#A37F2C"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/twitter"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/twitter"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/name.x"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="reem nigma"
                        android:textColor="#A37F2C"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_weight="4"/>

                    <ImageView
                        android:id="@+id/youtube"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/youtube"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/name.tube"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Reem Nigma"
                        android:textColor="#A37F2C"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_weight="4"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>