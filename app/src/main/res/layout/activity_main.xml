<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mama_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/child1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:gravity="center"
                    android:id="@+id/reem_nigma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:text="Reem Nigma"
                    android:textColor="#A37F2C"
                    android:textSize="60sp"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/programming_developer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Programming Developer"
                    android:textColor="#A37F2C"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/reem_nigma_wight"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/reem_nigma_wight" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/discreption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:text="مصممة تطبيقات اندرويد"
                    android:textColor="#A37F2C"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:text="القاهرة"
                    android:textColor="#A37F2C"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:text="20 ساعة"
                    android:textColor="#A37F2C"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/child2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/phone_icon"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/phone_icon" />

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/no_tele"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="4"
                        android:text="01064422023"
                        android:textColor="#A37F2C"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/telegram"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/telegram" />

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/no_gram"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="4"
                        android:text="01064422023"
                        android:textColor="#A37F2C"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/whatsapp"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/whatsapp" />

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/no_whats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="4"
                        android:text="01064422023"
                        android:textColor="#A37F2C"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/facebook"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/facebook" />

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/face_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="4"
                        android:text="Reem Hany Nigma"
                        android:textColor="#A37F2C"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/instagram"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/instagram" />

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/insta_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="4"
                        android:text="reemnigma"
                        android:textColor="#A37F2C"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/linkedin"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/linkedin" />

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/in_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="4"
                        android:text="reem nigma"
                        android:textColor="#A37F2C"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/twitter"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/twitter" />

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/x_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="4"
                        android:text="reem nigma"
                        android:textColor="#A37F2C"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/youtube"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/youtube" />

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/tube_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="4"
                        android:text="Reem Nigma"
                        android:textColor="#A37F2C"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>